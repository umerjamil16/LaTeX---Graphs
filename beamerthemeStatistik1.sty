% Custom themes etc.
\useinnertheme[shadow=true]{rounded}
\useoutertheme{shadow}
\setbeamercolor*{block body}{fg=black,bg=Standardblock}
\setbeamercolor*{block title}{fg=white,bg=Blocktitel}
